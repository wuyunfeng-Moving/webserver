{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "..",
      "moduleResolution": "node",
      "baseUrl": "..",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": [
      "./server.ts",
      "../shared/**/*"
    ],
    "exclude": ["node_modules"]
}