{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifiers": true,
      "transpileOnly": false
    },
    "include": [
      "./server.ts",
      "../shared/**/*"
    ],
    "exclude": ["node_modules", "dist"]
}